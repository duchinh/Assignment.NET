@model Bai2.Models.Person

@{
    ViewData["Title"] = "Chi tiết người dùng";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <h1 class="h3 mb-0">Chi tiết người dùng</h1>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-sm me-2">
                            <i class="fas fa-edit me-1"></i>Sửa
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash me-1"></i>Xóa
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h5 class="card-title text-muted">Họ và tên</h5>
                                    <p class="card-text h6">@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h5 class="card-title text-muted">@Html.DisplayNameFor(model => model.Gender)</h5>
                                    <p class="card-text h6">@Html.DisplayFor(model => model.Gender)</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h5 class="card-title text-muted">@Html.DisplayNameFor(model => model.DateOfBirth)</h5>
                                    <p class="card-text h6">@Html.DisplayFor(model => model.DateOfBirth)</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h5 class="card-title text-muted">@Html.DisplayNameFor(model => model.PhoneNumber)</h5>
                                    <p class="card-text h6">@Html.DisplayFor(model => model.PhoneNumber)</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h5 class="card-title text-muted">@Html.DisplayNameFor(model => model.BirthPlace)</h5>
                                    <p class="card-text h6">@Html.DisplayFor(model => model.BirthPlace)</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h5 class="card-title text-muted">@Html.DisplayNameFor(model => model.IsGraduated)</h5>
                                    <p class="card-text h6">
                                        @if (Model.IsGraduated)
                                        {
                                            <span class="badge bg-success">Đã tốt nghiệp</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">Chưa tốt nghiệp</span>
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="text-center mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 